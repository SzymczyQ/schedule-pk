{% set fieldVars = field.vars %}
{% set hasError = fieldVars.errors|length ? true : false %}
{% set errorClass = hasError ? 'has-error' : '' %}

<div class="form-group {{ errorClass }}">
    <label for="{{ fieldVars.id }}" class="col-sm-2 control-label">
        {{ fieldVars.label }}
    </label>

    <div class="col-sm-10">
        <input type="text"
               class="form-control"
               name="{{ fieldVars.full_name }}"
               id="{{ fieldVars.id }}"
               placeholder="{{ fieldVars.attr.placeholder }}"
               value="{{ fieldVars.value }}"
        >

        {% if hasError == true %}
            {% for error in fieldVars.errors %}
                <span class="help-block">{{ error.message }}</span>
            {% endfor %}
        {% endif %}
    </div>
</div>