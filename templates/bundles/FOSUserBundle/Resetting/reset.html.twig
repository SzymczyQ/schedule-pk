{% extends 'base.html.twig' %}

{% form_theme form 'global/forms/config_horizontal_layout.html.twig' %}

{% block pageTitle %}
    {{ 'login.page_title'|trans }}
{% endblock %}

{% block pageBodyClass %}{{ 'login-page' }}{% endblock %}
{% block pageBody %}
    <div class="login-box">
        <div class="login-logo">
            <a href="{{ path('fos_user_resetting_request') }}">
                {{ application.name }}
            </a>
        </div>

        <div class="login-box-body">
            <p class="login-box-msg">
                {{ 'resetting.reset.reset_box_title'|trans }}
            </p>

            {# FORM ERRORS #}
            {{ form_errors(form) }}

            {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
                {{ form_widget(form) }}

                <div class="row">
                    <div class="col-xs-12">
                        <input type="submit"
                               class="btn btn-primary btn-block btn-flat"
                               value="{{ 'resetting.reset.submit'|trans([], 'FOSUserBundle') }}" />
                    </div>
                </div>
            {{ form_end(form) }}

            <br>
            <a href="{{ path('fos_user_security_login') }}" class="text-center">
                {{ 'login.login_button_label'|trans }}
            </a>
        </div>
    </div>
{% endblock %}