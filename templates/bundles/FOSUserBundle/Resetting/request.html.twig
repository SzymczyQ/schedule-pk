{% extends 'base.html.twig' %}

{% block pageTitle %}
    {{ 'resetting.request.page_title'|trans }}
{% endblock %}

{% block pageBodyClass %}{{ 'login-page' }}{% endblock %}
{% block pageBody %}
    <div class="login-box">
        <div class="login-logo">
            <a href="{{ path('fos_user_resetting_request') }}">
                {{ application.name }}
            </a>
        </div>

        <div class="login-box-body">
            <p class="login-box-msg">
                {{ 'resetting.request.request_box_title'|trans }}
            </p>

            <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                <div class="form-group">
                    <label for="username">{{ 'resetting.request.username'|trans([], 'FOSUserBundle') }}</label>
                    <input type="text" class="form-control" id="username" name="username" required="required" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-block btn-flat" value="{{ 'resetting.request.submit'|trans([], 'FOSUserBundle') }}" />
                </div>
            </form>

            <a href="{{ path('fos_user_security_login') }}" class="text-center">
                {{ 'login.login_button_label'|trans }}
            </a>
        </div>
    </div>
{% endblock %}