{% extends 'base.html.twig' %}

{% block pageTitle %}
    {{ 'admin.page_title'|trans }}
{% endblock %}

{% block pageContentDescriptionHeader %}
    {{ 'admin.page_title'|trans }}
{% endblock %}

{% block pageContentDescriptionBreadcrumb %}{% endblock %}

{% block pageContent %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">
                        Dodaj nowy parametr
                    </h3>
                </div>

                <div class="box-body">
                    <form>
                        <div class="form-group"><label class="col-sm-2 control-label" for="user_info_form_firstName">Imię</label>
                            <div class="col-sm-10"><input type="text" id="user_info_form_firstName"
                                                          name="user_info_form[firstName]" placeholder="Wpisz imię..."
                                                          class="form-control"></div>
                        </div>
                        <div class="form-group"><label class="col-sm-2 control-label" for="user_info_form_firstName">Imię</label>
                            <div class="col-sm-10"><input type="text" id="user_info_form_firstName"
                                                          name="user_info_form[firstName]" placeholder="Wpisz imię..."
                                                          class="form-control"></div>
                        </div>
                    </form>
                </div>

                <div class="box-footer clearfix">
                    <button class="btn-success btn">Dodaj</button>
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">
                        {{ 'admin.main_box_title'|trans }}
                    </h3>
                </div>

                <div class="box-body table-responsive">
                    <table class="table table-hover">
                        <tr>
                            <th>{{ 'admin.table.header_1'|trans }}</th>
                            <th>{{ 'admin.table.header_2'|trans }}</th>
                            <th>{{ 'admin.table.header_3'|trans }}</th>
                            <th>{{ 'admin.table.header_4'|trans }}</th>
                            <th>{{ 'admin.table.header_5'|trans }}</th>
                        </tr>
                        {% for parameter in parameters %}
                            <tr>
                                <td>{{ parameter.token }}</td>
                                <td>{{ parameter.value }}</td>
                                <td>{{ parameter.createdAt|date('Y-m-d H:i:s') }}</td>
                                <td>{{ parameter.updatedAt|date('Y-m-d H:i:s') }}</td>
                                <td>
                                    <button class="btn-info btn">Edytuj</button>
                                    <button class="btn-danger btn">Usuń</button>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}